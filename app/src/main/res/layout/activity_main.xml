<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_player_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Player 1: "
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_player_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Card"
        android:maxLength="1"
        android:inputType="number"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tv_player_one"
        app:layout_constraintTop_toTopOf="@id/tv_player_one" />

    <TextView
        android:id="@+id/tv_player_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Player 2: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_player_one" />

    <EditText
        android:id="@+id/et_player_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Card"
        android:maxLength="1"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@id/tv_player_two"
        app:layout_constraintTop_toTopOf="@id/tv_player_two" />

    <Button
        android:id="@+id/button_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="PLAY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_player_two" />

    <TextView
        android:id="@+id/tv_score_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Player 1 score: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_player_two" />

    <TextView
        android:id="@+id/score_player_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@id/tv_score_one"
        app:layout_constraintTop_toBottomOf="@+id/et_player_two" />

    <TextView
        android:id="@+id/tv_score_player_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2 score: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score_player_one" />

    <TextView
        android:id="@+id/score_player_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@id/tv_score_player_two"
        app:layout_constraintTop_toBottomOf="@+id/score_player_one" />


</android.support.constraint.ConstraintLayout>